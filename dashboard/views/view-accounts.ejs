<%- include('./partials/header') %>

<div class="container-fluid">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <div>
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb mb-0">
          <li class="breadcrumb-item"><a href="/dashboard">Dashboard</a></li>
          <li class="breadcrumb-item"><a href="/stock#<%= folder %>">Stock</a></li>
          <li class="breadcrumb-item active" aria-current="page"><%= file %></li>
        </ol>
      </nav>
      <h1 class="h3 mt-2"><i class="bi bi-file-text me-2"></i><%= file %></h1>
    </div>
    <div>
      <a href="/stock#<%= folder %>" class="btn btn-outline-secondary me-2">
        <i class="bi bi-arrow-left me-1"></i> Back to Stock
      </a>
      <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addAccountsModal">
        <i class="bi bi-plus-circle me-1"></i> Add Accounts
      </button>
    </div>
  </div>
  
  <div class="row mb-4">
    <div class="col-md-4">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">File Information</h5>
          <div class="mb-3">
            <strong>Category:</strong> <%= folder %>
          </div>
          <div class="mb-3">
            <strong>File Name:</strong> <%= file %>
          </div>
          <div class="mb-3">
            <strong>Account Count:</strong> <%= accountCount %> accounts
          </div>
          <div class="mb-3">
            <strong>Last Modified:</strong>
            <% try { %>
              <% const stats = fs.statSync(`./${folder}/${file}`); %>
              <%= stats.mtime.toLocaleDateString() %> <%= stats.mtime.toLocaleTimeString() %>
            <% } catch (err) { %>
              Unknown
            <% } %>
          </div>
        </div>
      </div>
    </div>
    
    <div class="col-md-8">
      <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
          <h5 class="card-title mb-0">Actions</h5>
          <div>
            <form action="/stock/<%= folder %>/<%= file %>?_method=DELETE" method="POST" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this file? This action cannot be undone.')">
              <button type="submit" class="btn btn-danger">
                <i class="bi bi-trash me-1"></i> Delete File
              </button>
            </form>
          </div>
        </div>
        <div class="card-body">
          <div class="row">
            <div class="col-md-6">
              <div class="d-grid">
                <button class="btn btn-outline-primary mb-2" data-bs-toggle="modal" data-bs-target="#exportAccountsModal">
                  <i class="bi bi-download me-1"></i> Export Accounts
                </button>
              </div>
            </div>
            <div class="col-md-6">
              <div class="d-grid">
                <button class="btn btn-outline-primary mb-2" data-bs-toggle="modal" data-bs-target="#uploadFileModal">
                  <i class="bi bi-upload me-1"></i> Upload File
                </button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
      <h5 class="card-title mb-0">Accounts</h5>
      <div class="input-group" style="max-width: 300px;">
        <input type="text" class="form-control" id="searchAccounts" placeholder="Search accounts...">
        <button class="btn btn-outline-secondary" type="button" id="searchButton">
          <i class="bi bi-search"></i>
        </button>
      </div>
    </div>
    <div class="card-body">
      <div class="table-responsive">
        <table class="table" id="accountsTable">
          <thead>
            <tr>
              <th>#</th>
              <th>Account</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% if (accounts.length === 0) { %>
              <tr>
                <td colspan="3" class="text-center">No accounts in this file</td>
              </tr>
            <% } else { %>
              <% accounts.forEach((account, index) => { %>
                <tr>
                  <td><%= index + 1 %></td>
                  <td class="account-text"><%= account %></td>
                  <td>
                    <button class="btn btn-sm btn-outline-primary copy-btn" data-account="<%= account %>">
                      <i class="bi bi-clipboard"></i> Copy
                    </button>
                  </td>
                </tr>
              <% }); %>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<!-- Add Accounts Modal -->
<div class="modal fade" id="addAccountsModal" tabindex="-1" aria-labelledby="addAccountsModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content bg-dark text-light">
      <div class="modal-header">
        <h5 class="modal-title" id="addAccountsModalLabel">Add Accounts to <%= file %></h5>
        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <form action="/stock/<%= folder %>/<%= file %>/add" method="POST">
        <div class="modal-body">
          <div class="mb-3">
            <label for="accounts" class="form-label">Accounts (one per line)</label>
            <textarea class="form-control" id="accounts" name="accounts" rows="10" placeholder="Enter accounts (one per line)" required></textarea>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
          <button type="submit" class="btn btn-primary">Add Accounts</button>
        </div>
      </form>
    </div>
  </div>
</div>

<!-- Export Accounts Modal -->
<div class="modal fade" id="exportAccountsModal" tabindex="-1" aria-labelledby="exportAccountsModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content bg-dark text-light">
      <div class="modal-header">
        <h5 class="modal-title" id="exportAccountsModalLabel">Export Accounts</h5>
        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <p>You can copy all accounts to clipboard or download as a file:</p>
        <div class="d-grid gap-2">
          <button id="copyAllBtn" class="btn btn-outline-primary">
            <i class="bi bi-clipboard"></i> Copy All to Clipboard
          </button>
          <a href="/stock/<%= folder %>/<%= file %>/download" class="btn btn-outline-primary">
            <i class="bi bi-download"></i> Download as Text File
          </a>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>

<!-- Upload File Modal -->
<div class="modal fade" id="uploadFileModal" tabindex="-1" aria-labelledby="uploadFileModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content bg-dark text-light">
      <div class="modal-header">
        <h5 class="modal-title" id="uploadFileModalLabel">Upload File</h5>
        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <form action="/stock/<%= folder %>/<%= file %>/upload" method="POST" enctype="multipart/form-data">
        <div class="modal-body">
          <div class="mb-3">
            <label for="fileUpload" class="form-label">Select Text File</label>
            <input class="form-control" type="file" id="fileUpload" name="fileUpload" accept=".txt" required>
            <small class="form-text text-muted">File content will replace current accounts in this file.</small>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
          <button type="submit" class="btn btn-primary">Upload</button>
        </div>
      </form>
    </div>
  </div>
</div>

<%- include('./partials/footer') %>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Copy individual account
    const copyButtons = document.querySelectorAll('.copy-btn');
    copyButtons.forEach(button => {
      button.addEventListener('click', function() {
        const account = this.getAttribute('data-account');
        navigator.clipboard.writeText(account)
          .then(() => {
            // Change button text temporarily
            const originalHTML = this.innerHTML;
            this.innerHTML = '<i class="bi bi-check"></i> Copied!';
            setTimeout(() => {
              this.innerHTML = originalHTML;
            }, 2000);
          })
          .catch(err => {
            console.error('Could not copy text: ', err);
            alert('Failed to copy to clipboard');
          });
      });
    });
    
    // Copy all accounts
    const copyAllBtn = document.getElementById('copyAllBtn');
    if (copyAllBtn) {
      copyAllBtn.addEventListener('click', function() {
        const accounts = <%= JSON.stringify(accounts) %>;
        navigator.clipboard.writeText(accounts.join('\n'))
          .then(() => {
            // Change button text temporarily
            const originalHTML = this.innerHTML;
            this.innerHTML = '<i class="bi bi-check"></i> All Copied!';
            setTimeout(() => {
              this.innerHTML = originalHTML;
            }, 2000);
            
            // Close modal after copying
            const modal = bootstrap.Modal.getInstance(document.getElementById('exportAccountsModal'));
            modal.hide();
          })
          .catch(err => {
            console.error('Could not copy text: ', err);
            alert('Failed to copy to clipboard');
          });
      });
    }
    
    // Search accounts
    const searchInput = document.getElementById('searchAccounts');
    const searchButton = document.getElementById('searchButton');
    
    function performSearch() {
      const searchTerm = searchInput.value.toLowerCase();
      const rows = document.querySelectorAll('#accountsTable tbody tr');
      
      rows.forEach(row => {
        const accountCell = row.querySelector('.account-text');
        if (!accountCell) return;
        
        const account = accountCell.textContent.toLowerCase();
        if (account.includes(searchTerm)) {
          row.style.display = '';
        } else {
          row.style.display = 'none';
        }
      });
    }
    
    if (searchButton) {
      searchButton.addEventListener('click', performSearch);
    }
    
    if (searchInput) {
      searchInput.addEventListener('keyup', function(event) {
        if (event.key === 'Enter') {
          performSearch();
        }
      });
    }
  });
</script>