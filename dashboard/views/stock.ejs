<%- include('./partials/header') %>

<div class="container-fluid">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3"><i class="bi bi-box-seam me-2"></i>Stock Management</h1>
    <a href="/dashboard" class="btn btn-outline-secondary btn-sm">
      <i class="bi bi-arrow-left me-1"></i> Back to Dashboard
    </a>
  </div>
  
  <div class="row mb-4">
    <% const stockFolders = ['basicstock', 'bstock', 'extreme', 'fstock']; %>
    <% stockFolders.forEach(folder => { %>
      <div class="col-md-3">
        <div class="card h-100">
          <div class="card-body stats-card">
            <i class="bi bi-box-seam"></i>
            <% let totalAccounts = 0; %>
            <% let fileCount = 0; %>
            <% try { %>
              <% const files = stockData[folder] || []; %>
              <% fileCount = files.length; %>
              <% files.forEach(file => { totalAccounts += file.count; }); %>
            <% } catch (err) { /* Ignore errors */ } %>
            <div class="count"><%= totalAccounts %></div>
            <div class="label"><%= folder %> Accounts</div>
            <small class="text-muted"><%= fileCount %> files</small>
          </div>
          <div class="card-footer p-2">
            <a href="#<%= folder %>" class="btn btn-sm btn-primary w-100">View Files</a>
          </div>
        </div>
      </div>
    <% }); %>
  </div>
  
  <% stockFolders.forEach(folder => { %>
    <div class="card mb-4" id="<%= folder %>">
      <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="card-title mb-0"><%= folder %> Stock Files</h5>
        <button class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#createFileModal<%= folder %>">
          <i class="bi bi-plus-circle me-1"></i> Create New File
        </button>
      </div>
      <div class="card-body">
        <div class="table-responsive">
          <table class="table">
            <thead>
              <tr>
                <th>File Name</th>
                <th>Accounts</th>
                <th>Last Updated</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% try { %>
                <% const files = stockData[folder] || []; %>
                <% if (files.length === 0) { %>
                  <tr>
                    <td colspan="4" class="text-center">No files in this category</td>
                  </tr>
                <% } else { %>
                  <% files.forEach(file => { %>
                    <tr>
                      <td><%= file.name %></td>
                      <td><%= file.count %> accounts</td>
                      <td>
                        <% try { %>
                          <% const stats = fs.statSync(`./${folder}/${file.name}`); %>
                          <%= stats.mtime.toLocaleDateString() %> <%= stats.mtime.toLocaleTimeString() %>
                        <% } catch (err) { %>
                          Unknown
                        <% } %>
                      </td>
                      <td>
                        <div class="btn-group">
                          <a href="/stock/<%= folder %>/<%= file.name %>" class="btn btn-sm btn-primary">
                            <i class="bi bi-eye"></i>
                          </a>
                          <button class="btn btn-sm btn-success" data-bs-toggle="modal" data-bs-target="#addAccountsModal<%= folder %><%= file.name.replace('.txt', '') %>">
                            <i class="bi bi-plus"></i>
                          </button>
                          <form action="/stock/<%= folder %>/<%= file.name %>?_method=DELETE" method="POST" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this file?')">
                            <button type="submit" class="btn btn-sm btn-danger">
                              <i class="bi bi-trash"></i>
                            </button>
                          </form>
                        </div>
                      </td>
                    </tr>
                    
                    <!-- Add Accounts Modal -->
                    <div class="modal fade" id="addAccountsModal<%= folder %><%= file.name.replace('.txt', '') %>" tabindex="-1" aria-labelledby="addAccountsModalLabel<%= folder %><%= file.name.replace('.txt', '') %>" aria-hidden="true">
                      <div class="modal-dialog">
                        <div class="modal-content bg-dark text-light">
                          <div class="modal-header">
                            <h5 class="modal-title" id="addAccountsModalLabel<%= folder %><%= file.name.replace('.txt', '') %>">Add Accounts to <%= file.name %></h5>
                            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                          </div>
                          <form action="/stock/<%= folder %>/<%= file.name %>/add" method="POST">
                            <div class="modal-body">
                              <div class="mb-3">
                                <label for="accounts<%= folder %><%= file.name.replace('.txt', '') %>" class="form-label">Accounts (one per line)</label>
                                <textarea class="form-control" id="accounts<%= folder %><%= file.name.replace('.txt', '') %>" name="accounts" rows="10" placeholder="Enter accounts (one per line)" required></textarea>
                              </div>
                            </div>
                            <div class="modal-footer">
                              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                              <button type="submit" class="btn btn-primary">Add Accounts</button>
                            </div>
                          </form>
                        </div>
                      </div>
                    </div>
                  <% }); %>
                <% } %>
              <% } catch (err) { %>
                <tr>
                  <td colspan="4" class="text-center text-danger">Error loading files: <%= err.message %></td>
                </tr>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
    
    <!-- Create File Modal -->
    <div class="modal fade" id="createFileModal<%= folder %>" tabindex="-1" aria-labelledby="createFileModalLabel<%= folder %>" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content bg-dark text-light">
          <div class="modal-header">
            <h5 class="modal-title" id="createFileModalLabel<%= folder %>">Create New File in <%= folder %></h5>
            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <form action="/stock/<%= folder %>/create" method="POST">
            <div class="modal-body">
              <div class="mb-3">
                <label for="filename<%= folder %>" class="form-label">File Name</label>
                <input type="text" class="form-control" id="filename<%= folder %>" name="filename" placeholder="Enter file name (without .txt)" required>
                <small class="form-text text-muted">Only alphanumeric characters, underscores, and hyphens are allowed. .txt will be added automatically.</small>
              </div>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
              <button type="submit" class="btn btn-primary">Create File</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  <% }); %>
</div>

<%- include('./partials/footer') %>