<%- include('./partials/header') %>

<div class="d-flex justify-content-between align-items-center mb-4">
  <h1>Stock Management</h1>
  <div>
    <% 
    let totalCount = 0;
    Object.keys(stockData).forEach(folder => {
      stockData[folder].forEach(file => {
        totalCount += file.count;
      });
    });
    %>
    <span class="badge bg-primary">Total Accounts: <%= totalCount %></span>
  </div>
</div>

<ul class="nav nav-tabs mb-4">
  <% Object.keys(stockData).forEach((folder, index) => { %>
    <li class="nav-item">
      <a class="nav-link <%= index === 0 ? 'active' : '' %>" id="<%= folder %>-tab" data-bs-toggle="tab" href="#<%= folder %>" role="tab">
        <%= folder.charAt(0).toUpperCase() + folder.slice(1) %>
        <span class="badge bg-secondary ms-1">
          <% 
          let folderCount = 0;
          stockData[folder].forEach(file => {
            folderCount += file.count;
          });
          %>
          <%= folderCount %>
        </span>
      </a>
    </li>
  <% }) %>
</ul>

<div class="tab-content">
  <% Object.keys(stockData).forEach((folder, index) => { %>
    <div class="tab-pane fade <%= index === 0 ? 'show active' : '' %>" id="<%= folder %>" role="tabpanel">
      <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
          <h5 class="mb-0"><%= folder.charAt(0).toUpperCase() + folder.slice(1) %> Accounts</h5>
          <button type="button" class="btn btn-sm btn-primary" data-bs-toggle="modal" data-bs-target="#create<%= folder %>Modal">
            <i class="bi bi-plus-circle me-1"></i> Create New File
          </button>
        </div>
        <div class="card-body">
          <% if (stockData[folder].length === 0) { %>
            <div class="alert alert-info">
              No files found in this category. Create a new file to get started.
            </div>
          <% } else { %>
            <div class="table-responsive">
              <table class="table table-hover">
                <thead>
                  <tr>
                    <th>File Name</th>
                    <th>Account Count</th>
                    <th>Actions</th>
                  </tr>
                </thead>
                <tbody>
                  <% stockData[folder].forEach(file => { %>
                    <tr>
                      <td><%= file.name %></td>
                      <td><%= file.count %></td>
                      <td>
                        <div class="btn-group">
                          <a href="/stock/<%= folder %>/<%= file.name %>" class="btn btn-sm btn-info">
                            <i class="bi bi-eye"></i> View
                          </a>
                          <button type="button" class="btn btn-sm btn-danger" data-bs-toggle="modal" data-bs-target="#delete<%= folder %><%= file.name.replace('.', '') %>Modal">
                            <i class="bi bi-trash"></i> Delete
                          </button>
                        </div>
                      </td>
                    </tr>
                  <% }) %>
                </tbody>
              </table>
            </div>
          <% } %>
        </div>
      </div>
    </div>
  <% }) %>
</div>

<!-- Create File Modals -->
<% Object.keys(stockData).forEach(folder => { %>
  <div class="modal fade" id="create<%= folder %>Modal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content bg-dark text-white">
        <div class="modal-header">
          <h5 class="modal-title">Create New File in <%= folder.charAt(0).toUpperCase() + folder.slice(1) %></h5>
          <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <form action="/stock/<%= folder %>/create" method="POST">
          <div class="modal-body">
            <div class="mb-3">
              <label for="filename" class="form-label">File Name</label>
              <input type="text" class="form-control bg-secondary text-white" id="filename" name="filename" placeholder="Enter file name without .txt extension" required>
              <div class="form-text text-muted">The .txt extension will be added automatically</div>
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
            <button type="submit" class="btn btn-primary">Create File</button>
          </div>
        </form>
      </div>
    </div>
  </div>
<% }) %>

<!-- Delete File Modals -->
<% Object.keys(stockData).forEach(folder => { %>
  <% stockData[folder].forEach(file => { %>
    <div class="modal fade" id="delete<%= folder %><%= file.name.replace('.', '') %>Modal" tabindex="-1" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content bg-dark text-white">
          <div class="modal-header">
            <h5 class="modal-title">Delete File</h5>
            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            <p>Are you sure you want to delete <strong><%= file.name %></strong>?</p>
            <p class="text-danger">This action cannot be undone!</p>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
            <form action="/stock/<%= folder %>/<%= file.name %>?_method=DELETE" method="POST">
              <button type="submit" class="btn btn-danger">Delete</button>
            </form>
          </div>
        </div>
      </div>
    </div>
  <% }) %>
<% }) %>

<%- include('./partials/footer') %>